{
    "compilerOptions": {
      "allowJs": true,
      "target": "esnext",
      "module": "esnext", 
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "allowImportingTsExtensions": true,
      "sourceMap": true,
      "baseUrl": ".",
      "types": [
        "vite/client",
        "vue"
      ],
      "paths": {
        "@/*": ["resources/js/*"]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
      "resources/**/*.ts",
      "resources/**/*.vue"
    ],
    "exclude": [
      "node_modules"
    ]
  }